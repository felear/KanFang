<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/dot_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewPager"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewPager"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house_xinfang_btn_bg"
            android:text="新房" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house_ershou_btn_bg"
            android:text="二手房" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house_zufang_btn_bg"
            android:text="租房" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house_zixun_btn_bg"
            android:text="资讯" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house2_youhui_btn_bg"
            android:text="打折优惠" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house2_kaipan_btn_bg"
            android:text="最新开盘" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house2_calculator_btn_bg"
            android:text="贷款计算" />

        <TextView
            style="@style/house_icon"
            android:drawableTop="@drawable/icon_house2_more_btn_bg"
            android:text="更多" />

    </LinearLayout>

    <TextView
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/colorTextCheck"
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a444"
            android:padding="10dp"
            android:text="最新资讯"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

</LinearLayout>